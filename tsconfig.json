{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./.dist",
    "experimentalDecorators": true
  },
  "include": ["./src/**/**/**/*", "src/app/messaging/handlers/.disabled-reload-command"],
  "exclude": ["node_modules"],
  "compileOnSave": true,
  "buildOnSave": true
}